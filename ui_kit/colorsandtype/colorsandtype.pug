doctype html
html(lang="en")
  head
    title=pageTitle
    style
      include styles/colorsandtype.css
  body
    .circle
        img(src="images/logo_1.svg")
    .blocks
      .color-block.color-block_100-percent
      .color-block.color-block_75-percent
      .color-block.color-block_50-percent
      .color-block.color-block_25-percent
      .color-block.color-block_5-percent
      .color-block.color-block_purple
      .color-block.color-block_green
    .text-block
        p.text1 Dark Shade 100%
          p.text2 #1F2041
        p.text1 Dark Shade 75%
          p.text2 #1F2041
        p.text1 Dark Shade 50%
          p.text2 #1F2041
        p.text1 Dark Shade 25%
          p.text2 #1F2041
        p.text1 Dark Shade 5%
          p.text2 #1F2041
        p.text1 Purple
          p.text2 #BC9CFF
        p.text1 Green
          p.text2 #6FCF97
    .header-block
      p.header-block_h1 H1
      p.header-block_h2 H2
      p.header-block_h3 H3
      p.header-block_body Body
    .title-block 
      p.title-block_h1 This one is the sub-section or widget title
      p.title-block_h2 Next one is the item title inside widgets
      p.title-block_h3 This is a label or CTA text
      p.title-block_body This is the body text which is used for most of the design, like paragraphs, lists, etc.